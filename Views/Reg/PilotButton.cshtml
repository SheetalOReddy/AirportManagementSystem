@model AirportManagementSystem.Models.Pilot

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pilot</title>
</head>
<body style="background-image:url('/Style/admin1.jpg');background-repeat:no-repeat;background-size:cover">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="text-align:center">
            <h1 style="color:brown">Welcome to Pilot Page</h1>
            <p style="font-size:30px;margin-right:-1200px;margin-top:-50px">
                @Html.ActionLink("Home", "Homepage")
            </p>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h4 style="color:navy; margin-top:70px;font-size:25px">New User Register Here</h4>
                    <input type="submit" value="Register" name="submit" class="btn btn-default" style="color:hotpink; height:40px; width:80px" />
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h4 style="color:navy;font-size:25px">Existing User Login Here</h4>
                    <input type="submit" value="Login" name="submit" class="btn btn-default" style="color:hotpink; height:40px; width:80px" />
                </div>
            </div>
        </div>
    }
</body>
</html>
